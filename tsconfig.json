{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "lib": ["es6", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": true,
    // "baseUrl": "./src",
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist"]
}
